@model IEnumerable<CaseStudyMVC.Models.CartItemViewModel>

@{
    ViewData["Title"] = "Cart";
}

<h2>Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice</td>
                <td>
                    <form asp-action="Remove" method="post" style="display:inline;">
                        <input type="hidden" name="cartItemId" value="@item.Id" />
                        <input type="submit" value="Remove" class="btn btn-danger" />
                    </form>
                    <form asp-action="UpdateQuantity" method="post" style="display:inline;">
                        <input type="hidden" name="cartItemId" value="@item.Id" />
                        <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control d-inline" style="width:auto;" />
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
<a asp-controller="Order" asp-action="Create" class="btn btn-success">Checkout</a>
