@model CaseStudyMVC.Models.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<div class="row">
    <div class="col-md-6">
        <img class="img-fluid" src="@Model.ImageUrl" alt="@Model.Name">
    </div>
    <div class="col-md-6">
        <h3>@Model.Name</h3>
        <p>@Model.Description</p>
        <h4>Price: @Model.Price</h4>
        <h4>Stock: @Model.Stock</h4>
    </div>
</div>
