@model CaseStudyMVC.Models.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Address">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <h3>Items</h3>
    <div id="order-items">
        @for (int i = 0; i < Model.Items.Count; i++)
        {
            <div class="form-group">
                <label for="Items[@i].ProductId">Product</label>
                <input asp-for="Items[@i].ProductId" class="form-control" />
                <span asp-validation-for="Items[@i].ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Items[@i].Quantity">Quantity</label>
                <input asp-for="Items[@i].Quantity" class="form-control" />
                <span asp-validation-for="Items[@i].Quantity" class="text-danger"></span>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Create Order</button>
</form>
