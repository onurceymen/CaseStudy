@model CaseStudyMVC.Models.ProductViewModel

@{
    ViewData["Title"] = "Product Detail";
}

<div class="text-center">
    <h1 class="display-4">@Model.Name</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <img class="img-fluid" src="@Model.ImageUrl" alt="@Model.Name">
    </div>
    <div class="col-md-6">
        <h3>@Model.Name</h3>
        <p>@Model.Description</p>
        <h4>Price: @Model.Price</h4>
        <h4>Stock: @Model.Stock</h4>
        <a href="@Url.Action("Add", "Cart", new { productId = Model.Id })" class="btn btn-primary">Add to Cart</a>
    </div>
</div>
